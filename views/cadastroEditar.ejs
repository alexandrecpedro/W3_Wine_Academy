<%- include("./partials/header")%>
<%- include("./partials/nav")%>

    <!--comeco pagina cursos-->
    <div class="container-site">

        <div class="caco"></div>


        <section class="encabezado">
            <i class="fas fa-book"></i>
            <h2 class="main-header">CADASTRO DE CURSOS</h2>
            <h4 class="subt-main-header videos">Editar curso</h4>
        </section>
        <!--encabezado-->
        <a class="link-cadastro" href="/admin/servicos">Voltar a Servicos</a>
        
        <form class="form-cadastro" action="/admin/servicos/editar/<%= curso.id %>/?_method=PUT" method="POST" enctype="multipart/form-data">
            <fieldset>
              
                <label for="nome">Nome</label>
                <input type="text" name="nome" id="nome" value="<%= curso.nome %>" required>

                <label for="professor">Professor</label>
                <input type="text" name="professor" id="professor" value="<%= curso.professor %>" required>

                <label for="puesto">Puesto</label>
                <input type="text" name="puesto" id="puesto" value="<%= curso.puesto %>" required>

                <label for="descricao">Descrição</label>
                <textarea name="descricao" id="descricao"><%=curso.descricao %> </textarea>

                <!-- <label for="preco">Preço</label>
                <input type="number" name="preco" id="preco"> -->

                <label for="link">Link a curso</label>
                <input type="url" name="link" id="link" value="<%= curso.link %>" required>

                <label for="ilustracao">Ilustração</label>
                <% if (curso.ilustracao) { %> 
                    <img src="/uploads/<%= curso.ilustracao %>" alt="">
                <% } %>

                <input type="file" name="ilustracao" id="ilustracao">

                <button type="submit" class="enviar btn btn-primary">Enviar</button>
            </fieldset>
        </form>

        <%- include("./partials/footer")%>
